@using E_Diary.WEB.Data.Entities
@model E_Diary.WEB.Data.Entities.Parent

@{
    ViewData["Title"] = "Details";
}

<h1>Подробная информация</h1>

<div>
    <h4>Родитель</h4>
    <hr />
    <dl class="row">
        <dt>
            @Html.DisplayNameFor(model => model.User.Name)
        <dd>
                @Html.DisplayFor(model => model.User.Name)
        </dd>
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.User.Surname)
        <dd>
                @Html.DisplayFor(model => model.User.Surname)
        </dd>
        </dt>
        @if (Model.User.Patronymic != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.User.Name)
            <dd>
                    @Html.DisplayFor(model => model.User.Name)
            </dd>
            </dt>
        }
        <dt>
            @Html.DisplayNameFor(model => model.User.Gender)
        <dd>
                @if (Model.User.Gender == E_Diary.WEB.Data.Enums.Gender.Female)
                {
                    <p>Женский</p>
                }
                else
                {
                <p>Мужской</p>
                }
        </dd>
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Children)

            @foreach (Student student in Model.Children)
            {
            <dd>
                   @student.Group.Year@student.Group.Literal @student.User.Surname @student.User.Name @student.User.Patronymic
            </dd>
            }
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary rounded-1" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index" class="btn btn-secondary rounded-1">Вернуться к списку</a>
</div>
